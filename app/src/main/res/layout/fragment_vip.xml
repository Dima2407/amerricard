<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_vip_logotype"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_vip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/available_for_sending"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_available_for_sending_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/vip_premium_text"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radio_group_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/postcard_1_vip"
                    android:textSize="20sp"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/radio_btn_vip_1_card"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/radio_buttons_image"
                    android:button="@android:color/transparent"
                    android:layout_marginLeft="65dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/postcard_3_vip"
                    android:textSize="20sp"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/radio_btn_vip_3_cards"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/radio_buttons_image"
                    android:button="@android:color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/postcard_5_vip"
                    android:textSize="20sp"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/radio_btn_vip_5_cards"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/radio_buttons_image"
                    android:button="@android:color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/postcard_10_vip"
                    android:textSize="20sp"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/radio_btn_vip_10_cards"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/radio_buttons_image"
                    android:button="@android:color/transparent"
                    android:checked="true" />

            </LinearLayout>

        </RadioGroup>

        <Button
            android:id="@+id/btn_pay_vip"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/stroke_for_button"
            android:text="@string/pay_button"
            android:textAllCaps="false" />

        <FrameLayout
            android:id="@+id/layout_login_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>