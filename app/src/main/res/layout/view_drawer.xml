<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/view_drawer_header" />

        <com.devtonix.amerricard.ui.view.DrawerItemView
            android:id="@+id/drawer_cards"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            custom:item_icon="@drawable/categories_icon"
            custom:item_tint="@color/colorIconsActive"
            custom:item_title="@string/category" />

        <com.devtonix.amerricard.ui.view.DrawerItemView
            android:id="@+id/drawer_calendar"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            custom:item_icon="@drawable/ic_calendar"
            custom:item_tint="@color/colorIconsActive"
            custom:item_title="@string/calendar" />

        <com.devtonix.amerricard.ui.view.DrawerItemView
            android:id="@+id/drawer_favorites"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            custom:item_icon="@drawable/ic_favorite_full"
            custom:item_tint="@color/colorIconsActive"
            custom:item_title="@string/favorite_cards" />

        <com.devtonix.amerricard.ui.view.DrawerItemView
            android:id="@+id/drawer_manage_holidays"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            custom:item_icon="@drawable/ic_edit"
            custom:item_tint="@color/colorIconsActive"
            custom:item_title="@string/manage_birthdays" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray" />

        <com.devtonix.amerricard.ui.view.DrawerItemView
            android:id="@+id/drawer_vip"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            custom:item_icon="@drawable/ic_vip"
            custom:item_title="@string/become_vip_title" />

        <com.devtonix.amerricard.ui.view.DrawerItemView
            android:id="@+id/drawer_premium"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            custom:item_icon="@drawable/ic_premium"
            custom:item_title="@string/premium" />

        <com.devtonix.amerricard.ui.view.DrawerItemView
            android:id="@+id/drawer_settings"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            custom:item_icon="@drawable/ic_settings"
            custom:item_tint="@color/colorIconsActive"
            custom:item_title="@string/settings" />

        <com.devtonix.amerricard.ui.view.DrawerItemView
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            custom:item_icon="@drawable/login"
            custom:item_tint="@color/colorIconsActive"
            custom:item_title="@string/log_in" />


    </LinearLayout>
</ScrollView>
