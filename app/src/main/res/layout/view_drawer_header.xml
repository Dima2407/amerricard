<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/view_side_nav_bar"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/un_reg_logo_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_logo" />

    <LinearLayout
        android:id="@+id/drawer_registration_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/is_reg_logo_image_view"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/drawer_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration Name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/drawer_email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Registration Email"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
